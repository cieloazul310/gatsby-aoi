{
  "name": "gatsby-theme-aoi",
  "private": true,
  "workspaces": [
    "packages/*",
    "starters/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "build:theme": "npm-run-all build:utils build:components",
    "build:starter": "yarn workspace gatsby-starter-aoi-theme build --prefix-paths",
    "dev:theme": "npm-run-all dev:components dev:utils --parallel",
    "version": "lerna version --conventional-commits",
    "version:major": "yarn run version major",
    "version:minor": "yarn run version minor",
    "version:patch": "yarn run version patch",
    "serve:starter": "yarn workspace gatsby-starter-aoi-theme serve --prefix-paths",
    "deploy:starter": "npx gh-pages -d starters/gatsby-starter-aoi-theme/public",
    "release": "lerna publish from-git",
    "prepare": "husky install",
    "eslint": "lerna run eslint",
    "lint-staged": "lint-staged",
    "bootstrap": "lerna bootstrap"
  },
  "lint-staged": {
    "./{packages,starters}/*/src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --parser typescript --write"
    ]
  }
}
