{
  "name": "gatsby-theme-aoi",
  "private": true,
  "workspaces": [
    "packages/*",
    "starters/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "lerna": "^6.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "build:theme": "npm-run-all build:components build:utils ",
    "build:theme-blog": "npm-run-all build:blog-cli build:blog-core build:blog-components build:blog-utils",
    "build:components": "yarn workspace @cieloazul310/gatsby-theme-aoi-components build",
    "build:utils": "yarn workspace @cieloazul310/gatsby-theme-aoi-utils build",
    "build:blog-cli": "yarn workspace @cieloazul310/gatsby-theme-aoi-blog-cli build",
    "build:blog-core": "yarn workspace @cieloazul310/gatsby-theme-aoi-blog-core build",
    "build:blog-components": "yarn workspace @cieloazul310/gatsby-theme-aoi-blog-components build",
    "build:blog-utils": "yarn workspace @cieloazul310/gatsby-theme-aoi-blog-utils build",
    "dev:theme": "npm-run-all dev:components dev:utils --parallel",
    "version": "lerna version --conventional-commits",
    "version:major": "yarn run version major",
    "version:minor": "yarn run version minor",
    "version:patch": "yarn run version patch",
    "serve:starter": "yarn workspace gatsby-starter-aoi-theme serve --prefix-paths",
    "deploy:starter": "npx gh-pages -d starters/gatsby-starter-aoi-theme/public",
    "release": "lerna publish from-git",
    "prepare": "husky install",
    "eslint": "lerna run eslint",
    "lint-staged": "lint-staged",
    "bootstrap": "lerna bootstrap"
  },
  "lint-staged": {
    "./{packages,starters}/*/src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --parser typescript --write"
    ]
  }
}
