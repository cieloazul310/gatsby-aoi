{
  "name": "gatsby-theme-aoi",
  "private": true,
  "packageManager": "yarn@3.2.4",
  "workspaces": [
    "packages/**/*",
    "starters/*"
  ],
  "scripts": {
    "build": "npm-run-all clean build:theme build:theme-blog",
    "build:theme": "nx run-many --target=build:core",
    "build:theme-blog": "nx run-many --target=build:blog",
    "dev": "nx run-many --target=dev",
    "clean": "nx run-many --target=clean",
    "build:starter": "nx run gatsby-starter-aoi-theme:build --prefix-paths",
    "build:starter-blog": "nx run gatsby-starter-aoi-blog:build",
    "serve:starter": "nx run gatsby-starter-aoi-theme:serve --prefix-paths",
    "versionup": "lerna version",
    "ci:versionup:patch": "lerna version patch --no-push --no-git-tag-version --yes && yarn run update-lockfile && yarn run commit-version",
    "ci:versionup:minor": "lerna version minor --no-push --no-git-tag-version --yes && yarn run update-lockfile && yarn run commit-version",
    "ci:versionup:major": "lerna version major --no-push --no-git-tag-version --yes && yarn run update-lockfile && yarn run commit-version",
    "update-lockfile": "yarn install --mode=update-lockfile",
    "commit-version": "git add . && git commit -m \"chore(release): v`node -p 'require(\"./lerna.json\").version'`\"",
    "release": "lerna publish from-git",
    "ci:release": "lerna publish from-package --yes",
    "prepare": "husky install",
    "test": "jest",
    "typecheck": "nx run-many --target=typecheck",
    "eslint": "nx run-many --target=eslint",
    "lint-staged": "lint-staged",
    "bootstrap": "lerna bootstrap"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.21.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.1",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.4.3",
    "babel-preset-gatsby": "^3.7.0",
    "eslint": "^8.34.0",
    "eslint-config-custom": "^2.9.3",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.4.3",
    "jsonc-parser": "^3.2.0",
    "lerna": "^6.5.1",
    "lint-staged": "^13.1.2",
    "npm-run-all": "^4.1.5",
    "nx": "^15.7.2",
    "prettier": "^2.8.4",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "tsconfig": "^2.9.3",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "./starters/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --parser typescript --write"
    ],
    "./packages/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --parser typescript --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
