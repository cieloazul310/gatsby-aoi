{
  "name": "gatsby-theme-aoi",
  "private": true,
  "packageManager": "yarn@3.2.4",
  "workspaces": [
    "packages/**/*",
    "starters/*"
  ],
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@types/jest": "^29.2.1",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.2",
    "babel-preset-gatsby": "^2.24.0",
    "eslint": "^8.26.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.2.2",
    "jsonc-parser": "^3.2.0",
    "lerna": "^6.5.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "nx": "^15.7.2",
    "prettier": "^2.7.1",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.3",
    "tsconfig": "workspace:*",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "build": "npm-run-all clean build:theme build:theme-blog",
    "build:theme": "nx run-many --target=build:core",
    "build:theme-blog": "nx run-many --target=build:blog",
    "dev": "nx run-many --target=dev",
    "clean": "nx run-many --target=clean",
    "build:starter": "nx run gatsby-starter-aoi:build",
    "build:starter-blog": "nx run gatsby-starter-aoi-blog:build",
    "serve:starter": "yarn workspace gatsby-starter-aoi-theme serve --prefix-paths",
    "deploy:starter": "npx gh-pages -d starters/gatsby-starter-aoi-theme/public",
    "version": "lerna version --conventional-commits",
    "version:major": "yarn run version major",
    "version:minor": "yarn run version minor",
    "version:patch": "yarn run version patch",
    "release": "lerna publish from-git",
    "prepare": "husky install",
    "test": "jest",
    "typecheck": "nx run-many --target=typecheck",
    "eslint": "nx run-many --target=eslint",
    "lint-staged": "lint-staged",
    "bootstrap": "lerna bootstrap"
  },
  "lint-staged": {
    "./starters/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --parser typescript --write"
    ],
    "./packages/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --parser typescript --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
